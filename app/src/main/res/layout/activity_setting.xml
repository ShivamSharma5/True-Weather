<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shivam.tree.mousam.Setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:onClick="license"
        android:paddingLeft="15dp"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#afafaf" />

    <CheckBox
        android:id="@+id/showMapCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show Map"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"/>

    <CheckBox
        android:id="@+id/showNotiCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show Notifications"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:onClick="showSecurityTips"
        android:paddingLeft="15dp"
        android:text="Security Tips"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#afafaf" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:onClick="about"
        android:paddingLeft="15dp"
        android:text="About"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#afafaf" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:onClick="license"
        android:paddingLeft="15dp"
        android:text="License"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#afafaf" />

</LinearLayout>
